@using System.Collections
@using System.Data
@model DbComparer.Database
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="tab-content table-striped table-responsive table-bordered">
    @{
        DataRowCollection ds1 = Model.GetTableInfo("NewEmployees").Rows;
        DataRowCollection ds2 = Model.GetTableInfo("NewEmployees2").Rows;
        DataColumnCollection dc = Model.GetTableInfo("NewEmployees").Columns;
    }
    @for (int i=0; i<dc.Count;i++)
    {
        <tr>
            <td>@dc[i]</td>
            @for (int j = 0; j < ds1.Count; j++)
            {
            <td>@ds1[j].ItemArray[i]---@ds2[j].ItemArray[i]</td>
            }
        </tr>
    }
</table>

<p>Use this area to provide additional information.</p>
